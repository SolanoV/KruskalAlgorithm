<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="daa.kruskal.KruskalController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Number of Vertices:" />
        <TextField fx:id="verticesField" prefWidth="100" />
        <Button fx:id="createGraphButton" onAction="#createGraph" text="Create Graph" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Source Vertex:" />
        <TextField fx:id="srcField" prefWidth="60" />
        <Label text="Destination Vertex:" />
        <TextField fx:id="destField" prefWidth="60" />
        <Label text="Weight:" />
        <TextField fx:id="weightField" prefWidth="60" />
        <Button fx:id="addEdgeButton" onAction="#addEdge" text="Add Edge" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="mstButton" onAction="#computeMST" text="Compute MST" />
        <Button fx:id="clearButton" onAction="#clearGraph" text="Clear" />
        <Button fx:id="prevStepButton" onAction="#prevStep" text="Previous Step" />
        <Button fx:id="nextStepButton" onAction="#nextStep" text="Next Step" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="errorLabel" text="" textFill="RED" />
        <Label fx:id="stepIndicatorLabel" text="" />
    </HBox>
   <HBox prefHeight="539.0" prefWidth="1259.0">
      <children>
          <Pane fx:id="graphPane" prefHeight="539.0" prefWidth="864.0" style="-fx-border-color: black;" />
          <TableView fx:id="mstTableView" prefHeight="200">
              <columns>
                  <TableColumn fx:id="edgeColumn" prefWidth="100" text="Edge" />
                  <TableColumn fx:id="weightColumn" prefWidth="80" text="Weight" />
                  <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                  <TableColumn fx:id="totalWeightColumn" prefWidth="120" text="Total MST Weight" />
              </columns>
          </TableView>
      </children>
   </HBox>
</VBox>
